{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "lib": [
      "ES2021",
      "ES2022.Object",
      "DOM"
    ],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": false,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}